<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">false</item>  <!---  Работает   -->
        <item name="android:windowFullscreen">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="About_App"   parent="Theme.AppCompat.Dialog" >
        <item name="android:colorPrimary">@color/primary_material_dark</item>
        <item name="android:windowFullscreen">true</item>  <!--- Работает   -->
        <item name="android:colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/accent_material_dark</item>
    </style>

    <style name="Second" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:colorPrimaryDark">@color/accent_material_dark</item>
        <item name="android:windowFullscreen">true</item>  <!---  Работает   -->
        <item name="android:colorAccent">@color/holo_light_primary_dark</item>
        <item name="android:textColorPrimaryInverse">@color/accent_material_dark</item>
        <item name="android:colorBackground">@color/background_holo_light</item>
    </style>

    <style name="BATON" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
